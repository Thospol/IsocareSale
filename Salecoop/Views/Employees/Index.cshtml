@model IEnumerable<Salecoop.Models.Employee>

@{
    ViewBag.Title = "Index";
}
<br>
<br>
<center><h2>ข้อมูลพนักงาน</h2></center>

    <div class="col-md-12" style="margin-top:15px">
        @using (Html.BeginForm("Index", "Employees", FormMethod.Get, new { @class = "form-inline" }))
        {
            <p>

                <div class="form-group">
                    <label class="sr-only"> ค้นหาโดย:</label>
                    <h4 class="form-control-static" style="margin-right:10px">ค้นหาโดย:</h4>
                </div>
                @{
                    List<SelectListItem> listItems = new List<SelectListItem>();
                    listItems.Add(new SelectListItem
                    {
                        Text = "ชื่อจริง",
                        Value = "1",
                        Selected = true
                    });
                    listItems.Add(new SelectListItem
                    {
                        Text = "นามสกุล",
                        Value = "2"
                    });
                    listItems.Add(new SelectListItem
                    {
                        Text = "อีเมลล์",
                        Value = "3"
                    });
                    listItems.Add(new SelectListItem
                    {
                        Text = "ตำแหน่งงาน",
                        Value = "4"
                    });

                }
                <div class="form-group">
                    @Html.DropDownList("movieGenre", new SelectList(listItems, "Value", "Text"), new { @class = "form-control", @style = "margin-top:15px" })

                </div>
                <div class="form-group">
                    @Html.TextBox("SearchString", ViewBag.CurrentFilter as string, new { @class = "form-control", @placeholder = "ค้นหา", @style = "margin-top:15px" })

                </div>
                <input type="submit" value="ค้นหา" class="btn btn-success" style="margin-left:10px; margin-top:15px" />
            </p>
                    }
        <button class="btn btn-primary" style="margin-left:5px" onclick="location.href='@Url.Action("Create", "Employees")'">
            <i class="glyphicon glyphicon-plus"> </i>
            เพิ่มพนักงานใหม่
        </button>
    </div>
    <br>
    <table class="table" agiln="center">

        <tr>

            <th>

                <i class="glyphicon glyphicon-user"> </i>
                @Html.DisplayName("ชื่อจริง")
            </th>
            <th>
                <i class="glyphicon glyphicon-user"> </i>
                @Html.DisplayName("นามสกุล")
            </th>
            <th>
                <i class="glyphicon glyphicon-user"> </i>
                @Html.DisplayName("ชื่อผู้ใช้งาน")
            </th>
            <th>
                <i class="glyphicon glyphicon-lock"> </i>
                @Html.DisplayName("รหัสผ่าน")
            </th>
            <th>
                <i class="glyphicon glyphicon-credit-card"> </i>
                @Html.DisplayName("บัตรประชาชน")
            </th>
            <th>
                <i class="glyphicon glyphicon-envelope"> </i>
                @Html.DisplayName("อีเมลล์")
            </th>
            <th>
                <i class="glyphicon glyphicon-earphone"> </i>
                @Html.DisplayName("เบอร์โทร")
            </th>
            <th>
                <i class="glyphicon glyphicon-education"> </i>
                @Html.DisplayName("ตำแหน่งงาน")
            </th>
            <th>
                <i class="glyphicon glyphicon-wrench"> </i>
                @Html.DisplayName("จัดการข้อมูล")
            </th>
            <th></th>

        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Firstname)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Lastname)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Username)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Password)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Idcard)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Tel)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Position)
                </td>

                <td>
                    <button class="btn btn-warning" onclick="location.href='@Url.Action("Edit","Employees",new { id = item.IdEmployee})'">
                        <span class="glyphicon glyphicon-pencil"></span>
                    </button>
                    <button class="btn btn-success" style="margin-left:5px" onclick="location.href='@Url.Action("Details","Employees",new { id = item.IdEmployee })'">
                        <span class="glyphicon glyphicon-list-alt"></span>
                    </button>

                    <button class="btn btn-danger" style="margin-left:5px" onclick="location.href='@Url.Action("Delete","Employees",new { id = item.IdEmployee })'">
                        <span class="glyphicon glyphicon-trash"></span>
                    </button>
                </td>

            </tr>
        }

    </table>
